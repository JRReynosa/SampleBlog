<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://kit.fontawesome.com/df8cbb7f66.js" crossorigin="anonymous"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jonathan Reynosa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <header>
        <nav>
            <div class="row d-flex justify-content-center bg-light">
                    <a class="text-dark text-decoration-none display-4" asp-area="" asp-controller="Home" asp-action="Index">Jonathan Reynosa</a>
            </div>

            <div class="row d-flex justify-content-center bg-light">
                <div class="navbar navbar-light pb-0">
                    <ul class="navbar-nav list-group-horizontal">
                        <li>
                            <a class="nav-link mr-2" href="https://www.stackoverflow.com">
                                <i class="fab fa-stack-overflow" style="font-size: 25px;"></i>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link mr-2" href="https://www.linkedin.com">
                                <i class="fab fa-linkedin" style="font-size: 25px;"></i>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link mr-2" href="https://www.github.com">
                                <i class="fab fa-github" style="font-size: 25px;"></i>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link mr-2" href="https://www.youtube.com">
                                <i class="fab fa-youtube" style="font-size: 25px;"></i>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link mr-2" href="https://www.facebook.com">
                                <i class="fab fa-facebook" style="font-size: 25px;"></i>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link mr-2" href="https://www.twitter.com">
                                <i class="fab fa-twitter " style="font-size: 25px;"></i>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="https://www.instagram.com">
                                <i class="fab fa-instagram" style="font-size: 25px;"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="row d-flex justify-content-center bg-light border-bottom">
                <div class="navbar d-flex justify-content-center navbar-expand-sm navbar-light pt-0">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav" id="myNav">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Me</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Blogs" asp-action="Index">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Work">My Work</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact Me</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <script>
                // Change link width  and padding on collapse
                var timesClicked = 0;
                var changePadding = function () { $("#myNav").css("padding-left", "0px") };
                $(".navbar-toggler").click(function () {
                    timesClicked++;
                    if (timesClicked % 2 == 0) {
                        $(".nav-item").width("auto")
                        window.setTimeout(changePadding, 400)
                    } else {
                        $(".nav-item").width("60%")
                        $("#myNav").css("padding-left", "70px")
                    }
                });
            </script>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Jonathan Reynosa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
